  \-\-basedir=/usr/local/mysql
  \-\-datadir=/usr/local/mysql/data
  \-\-server_id=5
  \-\-log\-bin=my_log
  \-\-general_log
  \-\-slow_query_log
  \-\-innodb_data_file_path=ibdata1:778M;ibdata2:50M:autoextend
#\&.\&.\&.done\&.
.fi
